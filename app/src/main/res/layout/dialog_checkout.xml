<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg_app_dark"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/etNombreRecibe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de quien recibe" />

        <EditText
            android:id="@+id/etDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Dirección de entrega" />

        <EditText
            android:id="@+id/etTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Teléfono"
            android:inputType="phone" />

        <EditText
            android:id="@+id/etNotas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Notas (opcional)"
            android:inputType="textMultiLine"
            android:minLines="2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Método de pago"
            android:textStyle="bold"/>

        <RadioGroup
            android:id="@+id/rgPago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbTarjeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tarjeta" />

            <RadioButton
                android:id="@+id/rbOxxo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OXXO / Depósito" />

            <RadioButton
                android:id="@+id/rbContraEntrega"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contra entrega" />
        </RadioGroup>

    </LinearLayout>
</ScrollView>
