<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="6dp"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Imagen del producto -->
        <ImageView
            android:id="@+id/imgProducto"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/ic_placeholder_producto"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Nombre del producto -->
        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Nombre"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/imgProducto"
            app:layout_constraintTop_toTopOf="@id/imgProducto"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Precio del producto -->
        <TextView
            android:id="@+id/tvPrecio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="$0.00 MXN"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/imgProducto"
            app:layout_constraintTop_toBottomOf="@id/tvNombre"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Descripción del producto -->
        <TextView
            android:id="@+id/tvDescripcion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:text="Descripción..."
            android:textSize="13sp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/imgProducto"
            app:layout_constraintTop_toBottomOf="@id/tvPrecio"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Botón de editar -->
        <ImageButton
            android:id="@+id/btnEditar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:contentDescription="Editar"
            android:src="@android:drawable/ic_menu_edit"
            app:layout_constraintTop_toBottomOf="@id/imgProducto"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Botón de eliminar -->
        <ImageButton
            android:id="@+id/btnEliminar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="12dp"
            android:background="@android:color/transparent"
            android:contentDescription="Eliminar"
            android:src="@android:drawable/ic_menu_delete"
            app:layout_constraintTop_toBottomOf="@id/imgProducto"
            app:layout_constraintStart_toEndOf="@id/btnEditar" />

        <!-- Botón de añadir al carrito -->
        <Button
            android:id="@+id/btnAgregarCarrito"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Añadir al carrito"
            app:layout_constraintTop_toBottomOf="@id/imgProducto"
            app:layout_constraintStart_toEndOf="@id/btnEliminar"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
